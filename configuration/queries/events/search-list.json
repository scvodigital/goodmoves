{
  "size": 10,
  "from": {{multiply (subtract (default request.params.query.page 1) 1) 10}},
  "_source": [
    "Id",
    "slug",
    "title",
    "title_slug",
    "description",
    "course_overview",
    "description_short",
    "course_overview_short",
    "date_start",
    "city",
    "places_available",
    "url"
  ],
  "query": {
    "bool": {
      "must_not": [
        {
          "term": {
            "hide_in_results": true
          }
        }
      ],
      "should": [
        {
          "term": {
            "course_type": "Training Course"
          }
        },
        {
          "term": {
            "course_type": "Network Event"
          }
        },
        {
          "term": {
            "course_type": "Seminar"
          }
        }
      ],
      "minimum_should_match": 1,
      "must": [
        {
          "term": {
            "team": "events"
          }
        },
        {
          "range" : {
            "date_start" : {
              "gt" : "now/d"
            }
          }
        },
        {{#if request.params.query.keywords ~}}
        {
          "query_string": {
            "query": {{{stringify request.params.query.keywords}}},
            "fields": ["text_bag_boost^5", "text_bag"],
            "default_operator": "AND",
            "analyzer": "snowball"
          }
        }
        {{else}}
        {
          "match_all": {}
        }
        {{/if ~}}
      ]
    }
  },
  "sort": {
    "date_start": "asc"
  }
}