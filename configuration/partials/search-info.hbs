{{#if paging.totalResults ~}}
<div class="search-info">
  <div class="search-info-bg">
    Total results: <strong class="text-secondary">{{addCommas paging.totalResults}}</strong>
    {{#compare paging.totalResults ">" 10 ~}} |
    Current page: <strong class="text-secondary">{{addCommas paging.currentPage}} of {{addCommas paging.totalPages}}</strong>
    {{/compare ~}}
    {{#compare @root.request.params.path "===" "search" ~}}
    <a href="/map{{> query_search}}" class="l-margin-full l-padding-full">
      <span class="far fa-map-marker-alt fa-fw mdc-list-item__graphic" title="Map"></span>
      <span class="underline">Show {{inflect paging.totalResults "job" "jobs"}} on map</a>
    </a>
    {{/compare ~}}
  </div>
</div>
{{else}}
{{#ifAny @root.request.params.query.keywords @root.request.params.query.location @root.request.params.query.workplace @root.request.params.query.salary_min @root.request.params.query.salary_max @root.request.params.query.working_patterns @root.request.params.query.regions @root.request.params.query.roles @root.request.params.query.sectors @root.request.params.query.home_based @root.request.params.query.various_locations ~}}
<div class="search-info">
  No results could be found, please try a different search query
</div>
{{/ifAny ~}}
{{/if ~}}
