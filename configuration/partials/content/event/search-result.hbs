<div class="mdc-card search-result" data-event-id="{{Id}}">
  <div class="mdc-card__info--event-row">
    <div class="mdc-card__info--event">
      <div class="mdc-card__info--event-title mdc-typography--headline6">
        <a href="{{url}}">
          {{trim title}}
        </a>
      </div>
      <div class="post-info">
        {{> content_event_post_info_booked}}
        {{> content_event_post_info_date}}
        {{> content_event_post_info_city}}
      </div>
    </div>
  </div>
  <hr class="mdc-list-divider" />
  <div class="search-result-article__snippet mdc-typography--body1 faded-overflow" style="height:4rem;">
    {{#if description ~}}
    {{{description}}}
    {{else}}
    {{#if course_overview ~}}
    {{{course_overview}}}
    {{/if ~}}
    {{/if ~}}
  </div>
  <div class="mdc-card__actions">
    <div class="mdc-card__action-buttons demo-card__action-buttons--text-only mdc-card__actions--full-bleed">
      <a href="{{url}}" class="mdc-card__action" aria-label="Find out more about {{trim title}}">Find out more</a>
    </div>
  </div>
</div>