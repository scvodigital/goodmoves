<div class="mdc-card mdc-elevation--z0 content-primary search-result" data-opportunity-id="{{Id}}" data-opportunity-layout="Search Result" data-opportunity-context="{{default viewContext "Search Results"}}">
  {{> content_opportunity_key_info}}
  <hr class="mdc-list-divider" />
  {{#compare (trim (getProperty @root.data.profileInfo.notes Id)) "!==" "" ~}}
    {{> content_opportunity_description limit="3rem" description=description}}
    {{> content_opportunity_notes limit="3rem"}}
  {{else}}
    {{> content_opportunity_description limit="6rem" description=description}}
  {{/compare ~}}
  {{> content_opportunity_actions slug=slug Id=Id home_based=home_based distance=distance action=action}}
</div>