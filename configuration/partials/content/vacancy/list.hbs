<div class="mdc-card content-primary list{{if top_job " top-content"}}" data-vacancy-id="{{Id}}">
  {{> content_vacancy_key_info view="list"}}
  <hr class="mdc-list-divider" />
  {{#compare (trim (getProperty @root.data.notes Id)) "!==" "" ~}}
    {{> content_vacancy_description limit="3rem" description=description}}
    {{> content_vacancy_notes limit="3rem"}}
  {{else}}
    {{> content_vacancy_description limit="4rem" description=description}}
  {{/compare ~}}
  {{> content_vacancy_actions slug=slug Id=Id}}
</div>
{{>ga documentType="goodmoves-vacancy" documentId=Id hitType=(default hitContext "list")}}
